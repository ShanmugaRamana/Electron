<%- include('partials/header') %>
<%- include('partials/sidebar') %>

<main class="main-content" id="mainContent">
  <h1>
    Overview
    <span class="subtitle">(These are complete predicted values with 75% accuracy)</span>
  </h1>

  <div class="dashboard-grid">
    <!-- Left Section -->
    <div class="left-section">
      <article class="chart-container main-chart">
        <h3>
          Predicted Consumption (Next 7 Days)
          <span class="chart-date-range" id="main-chart-dates"></span>
        </h3>
        <div class="chart-wrapper">
          <canvas id="main-chart-area"></canvas>
        </div>
      </article>

      <div class="bottom-charts">
        <article class="chart-container">
          <h3>Predicted Utilization (Today)</h3>
          <div class="chart-wrapper">
            <canvas id="utilization-pie-chart"></canvas>
          </div>
        </article>

        <article class="chart-container">
          <h3>Predicted Intake (Today)</h3>
          <div class="chart-wrapper">
            <canvas id="intake-bar-chart"></canvas>
          </div>
        </article>
      </div>
    </div>

    <!-- Right Section - KPI Cards -->
    <div class="right-section">
      <article class="kpi-card">
        <h4>Predicted Consumption (Today)</h4>
        <p class="kpi-value" id="kpi-total-consumption">-- kWh</p>
        <p class="kpi-desc" id="kpi-today-date">Today's Date</p>
      </article>
      <article class="kpi-card">
        <h4>Predicted Generation (Today)</h4>
        <p class="kpi-value" id="kpi-total-generation">-- kWh</p>
        <p class="kpi-desc">Solar + Diesel + Biogas</p>
      </article>
      <article class="kpi-card">
        <h4>Predicted Net Grid Import</h4>
        <p class="kpi-value" id="kpi-net-grid-import">-- kWh</p>
        <p class="kpi-desc">Consumption - Generation</p>
      </article>
      <article class="kpi-card">
        <h4>Next Day's Forecast</h4>
        <p class="kpi-value" id="kpi-next-day-forecast">-- kWh</p>
        <p class="kpi-desc" id="kpi-next-day-date">Tomorrow's Date</p>
      </article>
    </div>
  </div>
</main>

<%- include('partials/footer') %>