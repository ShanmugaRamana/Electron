<%- include('partials/header') %>
<%- include('partials/sidebar') %>

<main class="main-content">
  <h1>Overview</h1>

  <section class="kpi-grid">
    <article class="kpi-card">
      <h4>Total Consumption (Today)</h4>
      <p class="kpi-value">-- kWh</p>
      <p class="kpi-desc">Updated just now</p>
    </article>
    <article class="kpi-card">
      <h4>Solar Generation (Today)</h4>
      <p class="kpi-value">-- kWh</p>
      <p class="kpi-desc">Total from all panels</p>
    </article>
    <article class="kpi-card">
      <h4>Peak Usage (Last 24h)</h4>
      <p class="kpi-value">-- kW</p>
      <p class="kpi-desc">At 2:30 PM Yesterday</p>
    </article>
    <article class="kpi-card">
      <h4>Grid Status</h4>
      <p class="kpi-value">Stable</p>
      <p class="kpi-desc">TNEB Campus HTSC-91</p>
    </article>
  </section>

  <section class="charts-grid">
    <article class="chart-container main-chart">
      <h3>Power Consumption vs. Generation (Last 7 Days)</h3>
      <div class="chart-placeholder" id="main-chart-area">
        Chart will be rendered here
      </div>
    </article>
    
    <article class="chart-container secondary-chart">
      <h3>Power Utilization Breakdown</h3>
      <div class="chart-placeholder" id="utilization-pie-chart">
        Pie chart will be rendered here
      </div>
    </article>

    <article class="chart-container secondary-chart">
      <h3>Power Intake Sources</h3>
      <div class="chart-placeholder" id="intake-bar-chart">
        Bar chart will be rendered here
      </div>
    </article>

    <article class="chart-container secondary-chart">
      <h3>Upcoming Prediction</h3>
      <div class="chart-placeholder" id="prediction-card">
        Predicted values will appear here
      </div>
    </article>
  </section>
</main>

<%- include('partials/footer') %>