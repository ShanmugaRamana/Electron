<%- include('partials/header') %>
<%- include('partials/sidebar') %>

<main class="main-content dashboard-layout">
  <h1>Campus Energy Dashboard</h1>

  <div class="dashboard-grid">
    <section class="dashboard-panel map-panel">
      <h2>Campus Overview</h2>
      <div id="campus-map-container">
      <svg width="100%" height="100%" viewBox="0 0 700 800" class="campus-map-svg">
        <rect data-metric="staff_quarters_util_pred" data-name="Staff Quarters" id="staff-quarters-shape" class="building staff-quarters" x="150" y="50" width="300" height="100" rx="5"></rect>
        <text x="300" y="100" class="building-label">Staff Quarters</text>

        <g class="building-group" data-metric="academic_blocks_util_pred" data-name="Academic Block">
          <rect id="academic-block-left-shape" class="building academic-block" x="100" y="180" width="100" height="200" rx="5"></rect>
          <rect id="academic-block-mid-right-shape" class="building academic-block" x="400" y="180" width="100" height="200" rx="5"></rect>
          <polygon id="academic-block-top-right-shape" class="building academic-block" points="550,220 650,220 650,280 600,320 550,320" rx="5"></polygon>
        </g>
        <text x="150" y="280" class="building-label rotated-label">Academic Block</text>
        <text x="450" y="280" class="building-label rotated-label">Academic Block</text>

        <rect data-metric="chiller_plant_util_pred" data-name="Chiller Plant" id="chiller-plant-shape" class="building chiller-plant" x="220" y="240" width="160" height="100" rx="5"></rect>
        <text x="300" y="290" class="building-label">Chiller Plant</text>

        <g class="building-group" data-metric="hostels_util_pred" data-name="Hostel">
          <path id="hostel-bottom-left-shape" class="building hostel" d="M 50 450 L 50 650 L 200 650 L 200 550 L 150 550 L 150 450 Z" rx="5"></path>
          <path id="hostel-bottom-right-shape" class="building hostel" d="M 550 400 L 550 700 L 650 700 L 650 500 L 600 500 L 600 400 Z" rx="5"></path>
        </g>
        <text x="125" y="550" class="building-label rotated-label">Hostel</text>
        <text x="600" y="550" class="building-label rotated-label">Hostel</text>

        <rect data-metric="stp_util_pred" data-name="STP" id="stp-shape" class="building stp" x="600" y="720" width="80" height="60" rx="5"></rect>
        <text x="640" y="750" class="building-label">STP</text>
      </svg>
    </div>
    </section>

    <section class="dashboard-panel charts-panel">
      <div class="filter-controls-inline">
        <div class="control-group">
          <label for="start-date">Start Date</label>
          <input type="date" id="start-date" name="start-date">
        </div>
        <div class="control-group">
          <label for="end-date">End Date</label>
          <input type="date" id="end-date" name="end-date">
        </div>
      </div>
      <div class="chart-container-single">
        <h3 id="total-consumption-title">Total Consumption Forecast</h3>
        <div class="chart-wrapper-single">
          <canvas id="total-consumption-chart"></canvas>
        </div>
      </div>
    </section>
  </div>
</main>

<%- include('partials/footer') %>